<header style="background-color:#7C6867">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand">
        <%= link_to root_path, class: 'nav-link text-light' do %>
          <%= image_tag 'no_image.jpg', :size =>'50x50' %>
        <% end %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to "マイページ", users_mypage_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, class: 'nav-link text-light', method: :delete %>
            </li>

          <% elsif restaurant_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_restaurant_session_path, class: 'nav-link text-light', method: :delete %>
            </li>

          <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "レストラン新規登録", new_restaurant_registration_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ゲストログイン", users_guest_sign_in_path, class: 'nav-link text-light', method: :post %>
            </li>
          <% end %>
        </ul>
    </div>
  </nav>
</header>