<header class="page-header" style="background-color:#938685">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand">
      <% if user_signed_in? %>
        <%= link_to root_path, class: 'nav-link text-light' do %>
          <%= image_tag 'cutlery.png', :size =>'60x60' %>
        <% end %>
      <% elsif restaurant_signed_in? %>
        <%= link_to restaurant_info_top_path, class: 'nav-link text-light' do %>
          <%= image_tag 'cutlery.png', :size =>'60x60' %>
        <% end %>
      <% elsif admin_signed_in? %>
        <%= link_to admins_top_path, class: 'nav-link text-light' do %>
          <%= image_tag 'cutlery.png', :size =>'60x60' %>
        <% end %>
      <% end %>  
      
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to "マイページ", user_path(current_user), class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "新規投稿", new_post_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "みんなの投稿", posts_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, class: 'nav-link text-light', method: :delete %>
            </li>
          <% elsif restaurant_signed_in? %>
            <li>
              <%= link_to "飲食店ログアウト", destroy_restaurant_session_path, class: 'nav-link text-light', method: :delete %>
            </li>
            </li>
              <%= link_to "飲食店マイページ", restaurant_info_restaurants_mypage_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to '予約一覧', restaurant_info_restaurant_reservations_path(current_restaurant), class: 'nav-link text-light' %>
            </li>
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to "管理者ログアウト", destroy_admin_session_path, class: 'nav-link text-light', method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "管理者新規登録", new_admin_registration_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "管理者ログイン", new_admin_session_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "飲食店新規登録", new_restaurant_registration_path, class: 'nav-link text-light' %>
            </li>
            </li>
              <%= link_to "飲食店ログイン", new_restaurant_session_path, class: 'nav-link text-light' %>
            </li>
            <li>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ゲストログイン", users_guest_sign_in_path, class: 'nav-link text-light', method: :post %>
            </li>
          <% end %>
        </ul>
    </div>
  </nav>
</header>