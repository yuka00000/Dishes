<div class="container">
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <div class="col-12 pt-3">
      <h4 class="title">投稿一覧</h4>
      <table class="table">
        <tr>
          <th style="width:20%">タイトル</th>
          <th style="width:30%">本文</th>
          <th style="width:10%">投稿者</th>
          <th style="width:20%">最終ログイン日</th>
          <th style="width:20%"></th>
        </tr>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td>
              <%= link_to admin_post_path(post) do %>
                <%= post.user.user_name %>
              <% end %>
            </td>
            <td><%= l post.user.last_sign_in_at, format: :long %></td>
            <td>
              <%= link_to "投稿削除", admin_post_path(post,type:"posts"), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-secondary" %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td><%= paginate @posts %></td>
        </tr>
      </table>
    </div>
  </div>
</div>