<div class="container">
  <div class="card-list py-5">
    <h4 class="title">人気投稿</h4>
    <div class="row row-cols-4">
      <% @post_favorite_ranks.first(20).each do |post| %>
        <div class="p-2" style="width: 300px;">
          <div class="card shadow">
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_post_image, class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2 p-0 ml-2">
                   <%= image_tag post.user.get_user_image(40,40), class:"mt-3 rounded-circle w-100"; %>
                </div>
                <div class="col-8 ml-3 mt-2 p-0">
                  <p>
                    <%= link_to user_path(post.user_id), style:"color:black;" do %>
                      <i class="fas fa-user"></i>
                      <%= post.user.user_name %>
                    <% end %>
                  </p>
                  <p>
                    <%= link_to(post_path(post), class:"text-dark") do %>
                      <strong><span> <%= post.title %></span></strong>
                    <% end %>
                  </p>
                  <div class="d-flex">
                    <p class="mr-3">
                      <%= link_to post_path(post.id), style:"color:black;" do %>
                        <i class="far fa-comment"></i>
                        <%= post.post_comments.count %>
                      <% end %>
                    </p>
                    <p>
                      <%= render 'public/favorites/btn', post: post, class:"text-dark" %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
