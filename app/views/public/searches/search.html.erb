<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
        <h2>Users search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_user_image(70, 70) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.user_name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
            </tr>
          <tbody>
          <h2>Post search for "<%= @word %>"</h2>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to user_path(post.user) do %>
                  <%= image_tag post.user.get_user_image(70, 70) %>
                <% end %>
              </td>
              <td><%= link_to post.title, post_path(post.id) %></td>
              <td><%= post.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>