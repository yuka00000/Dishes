<div class="container">
  <div class="row">
    <div class="col-md-8 pt-3 offset-md-1">
      <h2>みんなの投稿</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to user_path(post.user.id) do %>
                <%= image_tag post.user.post_image(80, 80) %>
              <% end %>
            </td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>