<% posts.each do |post| %>
  <div class="card w-50 mt-2 shadow">
    <%= link_to post_path(post) do %>
      <%= image_tag post.get_post_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
           <%= image_tag post.user.get_user_image(40,40), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-9 offset-md-1">
          <p class="card-title">
            <%= link_to(post_path(post), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i> <%= link_to post.user.user_name, user_path(post.user_id)%>
          <span><%= render 'public/favorites/btn', post: post %></span>
          <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>