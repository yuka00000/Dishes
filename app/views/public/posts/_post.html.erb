<% posts.each do |post| %>
  <div class="p-3" style="width: 240px;">
    <div class="card shadow">
      <%= link_to post_path(post) do %>
        <%= image_tag post.get_post_image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2.5 p-0 ml-2">
             <%= image_tag post.user.get_user_image(40,40), class:"mt-3 rounded-circle w-100"; %>
          </div>
          <div class="col-9.5 ml-3">
            <p class="card-title">
              <%= link_to(post_path(post), class:"text-dark") do %>
                <strong><span> <%= post.title %></span></strong>
              <% end %>
            </p>
            <p>
              <%= link_to user_path(post.user_id), style:"color:black;" do %>
                <i class="fas fa-user"></i>
                <%= post.user.user_name %>
              <% end %>
            </p>
            <div class="d-flex">
              <p id="comment_count", class="mr-3">
                <%= link_to post_path(post.id), style:"color:black;" do %>
                  <i class="far fa-comment"></i>
                  <%= post.post_comments.count %>
                <% end %>
              </p>
              <p id="favorite_buttons_<%= post.id %>">
                <%= render 'public/favorites/btn', post: post, class:"text-dark" %>
              </p>
            </div>
          </div>
        </div>
      </div>
      </div>
  </div>
<% end %>

