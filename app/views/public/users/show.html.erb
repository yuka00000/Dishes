<div class="container">
  <div class="row">
    <% if @user == current_user %>
      <h4 class="pt-3"><%= @user.user_name %>さんのマイページ</h4>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-1 pt-4 mr-3">
      <%= image_tag @user.get_user_image(100, 100) %>
    </div>
    <div class="col-md-4 pt-4">
      <h5>プロフィール</h5>
      <table class="table">
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.user_name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <% if @user == current_user %>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>
        <% end %>
      </table>
      <% if @user == current_user %>
        <%= link_to '編集する', edit_user_path(@user), class: "btn btn-secondary mb-3" %>
      <% end %>
    </div>
    <div class="col-md-5 pt-4 offset-md-1">
      <h5 class="pt-6">投稿一覧</h5>
      <% @user_posts.each do |user_post| %>
      <div>
        <%= link_to post_path(@user) do %>
          <%= image_tag user_post.get_post_image(100,100) %>
        <% end %>
        <p>
          <%= link_to post_path(user_post) do %>
            <%= user_post.title %>
          <% end %>
        </p>
        <p><%= user_post.body %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>