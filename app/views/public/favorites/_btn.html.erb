<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post), style:"color:black;", method: :delete, remote: true do %>
      <i class="fas fa-heart" style="color: #db1f57;"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post), style:"color:black;", method: :post, remote: true do %>
      <i class="far fa-heart"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% end %>