<div class="container">
  <div class="card-list py-5">
    <h4 class="title mb-3">いいねした投稿</h4>
    <div class="row">
      <% @favorite_posts.each do |favorite|%>
        <div class="p-3" style="width: 240px;">
          <div class="card shadow">
            <%= link_to post_path(favorite.post_id) do %>
              <%= image_tag favorite.post.get_post_image, class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-2.5 p-0 ml-2">
                  <%= image_tag favorite.post.user.get_user_image(40,40), class:"mt-3 rounded-circle w-100"; %>
                </div>
                <div class="col-9.5 ml-3">
                  <p class="card-title">
                    <%= link_to post_path(favorite.post_id), style:"color:black;"  do %>
                      <%= favorite.post.title %>
                    <% end %>
                  </p>
                  <p>
                    <%= link_to user_path(favorite.user_id), style:"color:black;"  do %>
                      <i class="fas fa-user"></i>
                      <%= favorite.post.user.user_name %>
                    <% end %>
                   </p>
                  <div class="d-flex">
                    <p class="mr-3">
                      <%= link_to post_path(favorite.post_id), style:"color:black;" do %>
                        <i class="far fa-comment"></i>
                        <%= favorite.post.post_comments.count %>
                      <% end %>
                    </p>
                    <p>
                      <%= render 'public/favorites/btn', post: favorite.post, class:"text-dark" %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>